{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": { "type": "integer" },
    "name": { "type": "string" },
    "type": {
      "type": "string",
      "enum": ["fiction", "non-fiction"]
    },
    "available": { "type": "boolean" },
    "author": { "type": "string" },
    "price": { "type": "number" },
    "current-stock": { "type": "integer" }
  },
  "required": ["id", "name", "type", "available"]
}


